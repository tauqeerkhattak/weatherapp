<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HyderabadActivity"
    android:orientation="vertical"
    android:background="#bbdefb"
    android:weightSum="11">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_hyd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">
        <ImageView
            android:id="@+id/weather_icon_hyd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="35dp"
            android:gravity="center"
            android:textColor="#000000"
            android:fontFamily="@font/balsamiq_regular"
            android:layout_height="match_parent"
            android:text="Hyderabad">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/weather_type_hyd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/balsamiq_regular"/>
        <TextView
            android:id="@+id/feels_like_hyd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center|start"
            android:layout_weight="1"
            android:textSize="20dp"
            android:fontFamily="@font/balsamiq_regular"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:weightSum="6"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/viewText_hyd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="end"
            android:layout_weight="3"
            android:text=""
            android:fontFamily="@font/balsamiq_regular"
            android:textSize="123sp"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="50dp"
            android:fontFamily="@font/balsamiq_regular"
            android:gravity="top"
            android:text="\u00B0C"/>
    </LinearLayout>
    <TextView
        android:id="@+id/date_hyd"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="#000000"
        android:fontFamily="@font/balsamiq_regular"
        android:gravity="center"
        android:textSize="25dp"
        android:text=""/>
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/progressBar_hyd"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <ListView
        android:id="@+id/next_week_forecast_hyd"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

    </ListView>
</LinearLayout>